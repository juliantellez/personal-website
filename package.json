{
  "name": "personal-website",
  "version": "0.0.1",
  "description": "personal website",
  "main": "dist/main.js",
  "scripts": {
    "types:css": "rm -rf **/*.css.d.ts && tcm src --camelCase",
    "types:css:watch": "npm run types:css -- --watch",
    "dev": "npm run types:css | sh ./scripts/dev.sh",
    "build": "sh ./scripts/build.sh",
    "build:analyze": "npm run build -- --analyze",
    "lint:ts": "tslint --project tsconfig.json -c './config/tslint/tslint.json' '**/*.{ts,tsx}' --exclude './**/*.d.ts'",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "prettier": "prettier --config ./config/prettier/.prettierrc --write '**/*.{ts,tsx,css}'",
    "prettier:check": "prettier --config ./config/prettier/.prettierrc  --list-different '**/*.{ts,tsx,css}'"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:ts && npm run prettier:check"
    }
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/webpack": "^4.4.31",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.2.0",
    "postcss-css-variables": "^0.12.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "style-loader": "^0.23.1",
    "ts-loader": "^4.4.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typed-css-modules": "^0.4.2",
    "typescript": "^3.1.3",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "rxjs": "^6.5.2"
  }
}
